.five {
  width: 750rpx;
  height: 1625rpx;
  background-color: #EEEEEE;
}
.item {
  height: 80rpx;
  width: 570rpx;
  line-height: 80rpx;
  margin-left: 40rpx;
}
.left {
  margin-top: 35rpx;
  margin-left: 40rpx;
  float: left;
}
.passage input {
  float: left;
  height: 80rpx;
  width: 570rpx;
  margin-left: 40rpx;
  line-height: 80rpx;
  border-bottom: solid 1rpx #EEEEEE;
}
.passage {
  background-color: white;
  margin-left: 50rpx;
  width: 660rpx;
  height: 780rpx;
  border-radius: 50rpx;
}
.under-passage {
  background-color: white;
  margin-left: 50rpx;
  margin-top: 30rpx;
  width: 660rpx;
  height: 100rpx;
  border-radius: 50rpx;
  position: absolute;
  z-index: 99;
}
.photo {
  height: 180rpx;
  width: 570rpx;
  margin-bottom: 15rpx;
}
.under-left {
  margin-top: 35rpx;
  margin-left: 40rpx;
  float: left;
  position: absolute;
  z-index: 100;
}
.select-left {
  margin-top: 15rpx;
  float: left;
}
.iconfont {
  margin-top: 15rpx;
  float: right;
}
.select {
  margin-top: 15rpx;
  width: 100rpx;
  float: right;
  color: #dadada;
}
.under-list {
  left: 570rpx;
  margin-right: 50rpx;
  margin-top: 30rpx;
  position: absolute;
  z-index: 100;
}
.passage::after {
  content: '';
  display: table;
  clear: both;
}
.under-passage::after {
  content: '';
  display: table;
  clear: both;
}
/* 点击更多的样式 */
.show-more {
  width: 100%;
  height: 2rpx;
  margin-top: 30rpx;
  float: left;
  border-radius: 50rpx;
  background-color: white;
  transition: height 1s;
  -moz-transition: height 1s;
  /* Firefox 4 */
  -webkit-transition: height 1s;
  /* Safari and Chrome */
  -o-transition: height 1s;
  /* Opera */
}
.under-test {
  margin-top: 65rpx;
  margin-left: 40rpx;
  position: absolute;
  z-index: 100;
}
.show-more-click {
  height: 200px;
}

